{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "typeRoots": ["src/types/*", "node_modules/@types"],
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*"]

}
